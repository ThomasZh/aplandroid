<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mTitleContainer"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/activity_contact_title_height"
    android:background="@color/activity_title_bg" >

    <ImageView
        android:id="@+id/leftBtn"
        android:layout_width="@dimen/activity_title_left_btn_width"
        android:layout_height="@dimen/activity_title_left_btn_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_title_left_btn_margin_left"
        android:src="@drawable/title_back" />

    <ImageView
        android:id="@+id/rightBtn"
        android:layout_width="@dimen/activity_title_right_btn_width"
        android:layout_height="@dimen/activity_title_right_btn_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/activity_title_right_btn_margin_right"
        android:src="@drawable/title_add" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_whiteline"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_contact_friends"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radiobutton_projecteding__selector"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/bg_classify_font_selector"
                android:text="好友" />

            <RadioButton
                android:id="@+id/rb_contact_contacts"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radiobutton_projected__selector"
                android:button="@null"
                android:gravity="center"
                   android:textColor="@drawable/bg_classify_font_selector"
                android:text="通讯录" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>