<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="@drawable/bg_corner_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iclub_item_height"
        android:orientation="horizontal" >

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_clublistactivity_clubimg"
          
            android:layout_width="140dp"
            android:layout_height="60dp" />

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_clublistactivity_clubimg"
            android:orientation="vertical" >

            <TextView
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:id="@+id/tv_clublistacitvity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="chengcai" />

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_clublistactivity_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:textColor="@color/black"
                android:text="2äºº" />
        </RelativeLayout>

        <ImageView
            android:layout_marginRight="20dp"
            
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_enter" />
    </RelativeLayout>

</LinearLayout>