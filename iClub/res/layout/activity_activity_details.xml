<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#e9e9e9">
	<include layout="@layout/activity_title"/>
	<ScrollView
	    android:id="@+id/mTotalContainer" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:visibility="gone">
		<LinearLayout
		    android:layout_width="match_parent"
			android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_marginTop="4dip">
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:background="@drawable/bg_corner_top_gray"
			    android:gravity="center_vertical">
			    <ImageView
			         android:id="@+id/mLeaderAvatarView" 
			         android:layout_width="50dip"
			         android:layout_height="50dip"
			         android:layout_margin="10dip"/>
			    <TextView
			         android:id="@+id/mLeaderNameTv"
				     android:layout_width="wrap_content"
				     android:layout_height="wrap_content"
				     android:textColor="#000000"
				     android:textSize="@dimen/textsize_normal"/>
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:padding="6dip"
			    android:orientation="vertical"
			    android:background="@drawable/bg_corner_bottom_white"
			    android:gravity="center_vertical">
			    <TextView
			         android:id="@+id/mNameTv"
				     android:layout_width="wrap_content"
				     android:layout_height="wrap_content"
				     android:textColor="#000000"
				     android:textSize="@dimen/textsize_normal"/>
			    <TextView
			         android:id="@+id/mDescTv"
				     android:layout_width="wrap_content"
				     android:layout_height="wrap_content"
				     android:textSize="@dimen/textsize_smaller"
				     android:ellipsize="end"
				     android:maxLines="50"/>
			    <RelativeLayout
				    android:id="@+id/mRecommandContainer" 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="4dip"
				    android:padding="6dip"
				    android:orientation="horizontal"
				    android:background="@drawable/bg_corner_white">
				    <TextView
				         android:id="@+id/mRecommandNumTv"
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:layout_alignParentLeft="true"
					     android:textSize="@dimen/textsize_smaller"
					     android:textColor="#5ba9ff"
					     android:text="recommand num"/>
				    <TextView
				         android:id="@+id/mRecommandNumTv"
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:layout_alignParentRight="true"
					     android:textSize="@dimen/textsize_smaller"
					     android:textColor="#5ba9ff"
					     android:text="@string/recomand_look_details"/>
				</RelativeLayout>
			    
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="80dip"
			    android:layout_marginTop="4dip"
			    android:padding="6dip"
			    android:orientation="horizontal"
			    android:background="@drawable/bg_start_end_time"
			    android:gravity="center_vertical">
				<RelativeLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:layout_marginLeft="4dip"
				    android:layout_marginRight="4dip"
				    android:padding="6dip"
				    android:orientation="vertical"
				    android:gravity="center_vertical">
				    <ImageView
				        android:id="@+id/mDateIconView"
				        android:layout_width="24dip"
				        android:layout_height="24dip"
				        android:layout_alignParentLeft="true"
				        android:background="@drawable/icon_start_time"/>
				    <TextView
				         android:id="@+id/mStartDateTv"
				         android:layout_toRightOf="@id/mDateIconView"
				         android:layout_alignTop="@id/mDateIconView"
				         android:layout_marginLeft="4dip"
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:textColor="@android:color/black"
					     android:textSize="@dimen/textsize_normal"
					     android:text="startDate"
					     android:gravity="top"/>
				    <TextView
				         android:id="@+id/mStartTimeTv"
				         android:layout_below="@id/mStartDateTv"
				         android:layout_alignLeft="@id/mStartDateTv"
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:textColor="@android:color/black"
					     android:textSize="@dimen/textsize_smaller"
					     android:text="startTime"/>
				</RelativeLayout>
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:padding="6dip"
				    android:orientation="vertical"
				    android:gravity="center_vertical|right">
				    <TextView
				         android:id="@+id/mEndDateTv"
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:textColor="@android:color/black"
					     android:textSize="@dimen/textsize_normal"/>
				    <TextView
				         android:id="@+id/mEndTimeTv"
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:textSize="@dimen/textsize_smaller"
					     android:textColor="@android:color/black"/>
				</LinearLayout>
			</LinearLayout>
			<RelativeLayout
			    android:id="@+id/mLocationContainer" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="4dip"
			    android:padding="6dip"
			    android:orientation="horizontal"
			    android:background="@drawable/bg_corner_white">
			    <ImageView
			        android:id="@+id/mLeftView"
			        android:layout_width="32dip"
			        android:layout_height="32dip"
			        android:layout_alignParentLeft="true"
			        android:background="@drawable/ic_launcher"
			        android:layout_centerVertical="true"/>
			    <ImageView
			        android:id="@+id/mRightView"
			        android:layout_width="32dip"
			        android:layout_height="32dip"
			        android:layout_alignParentRight="true"
			        android:background="@drawable/ic_launcher"
			        android:layout_centerVertical="true"/>
			    <TextView
			        android:id="@+id/mLocDescTv"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_toLeftOf="@id/mRightView"
			        android:layout_toRightOf="@id/mLeftView"
			        android:textSize="@dimen/textsize_small"
			        android:textColor="@android:color/black"
			        android:layout_centerVertical="true"/>
			</RelativeLayout>
			<RelativeLayout
			    android:id="@+id/mOptionContainer"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="4dip"
			    android:padding="6dip"
			    android:orientation="horizontal"
			    android:background="@drawable/bg_corner_white">
			    <Button
			        android:id="@+id/mShareBtn"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true"
			        android:textColor="@color/activity_title_bg"
			        android:background="@null"
			        android:text="@string/share"
			        android:textSize="@dimen/textsize_small"/>
			    <Button
			        android:id="@+id/mConsultBtn"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="@color/activity_title_bg"
			        android:background="@null"
			        android:layout_alignParentRight="true"
			        android:layout_centerVertical="true"
			        android:text="@string/join"
			        android:textSize="@dimen/textsize_small"/>
			    <Button
			        android:id="@+id/mJoinBtn"
			        android:layout_width="120dip"
			        android:layout_height="36dip"
			        android:textSize="@dimen/textsize_normal"
			        android:textColor="@android:color/white"
			        android:layout_centerInParent="true"
			        android:text="@string/consult"
			        android:background="@drawable/bg_btn_red"/>
			</RelativeLayout>
			<TextView
			     android:layout_width="match_parent"
			     android:layout_height="wrap_content"
			     android:layout_marginTop="20dip"
			     android:textColor="#000000"
			     android:textSize="@dimen/textsize_normal"
			     android:text="@string/articipants"
			     android:gravity="center"/>
			<Gallery
			    android:id="@+id/mGallery" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="10dip"
			    android:layout_marginBottom="10dip"
			    android:spacing="5dip"
			    android:layout_gravity="center_horizontal"/>"
		</LinearLayout>
	</ScrollView>
</LinearLayout>