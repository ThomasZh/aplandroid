<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/bg_corner_white"
		    android:padding="8dip"
		    android:layout_marginLeft="4dip"
	        android:layout_marginRight="4dip"
	        android:layout_marginTop="10dip"
	        android:layout_marginBottom="0dip"
		    android:orientation="horizontal" >
		    <ImageView
		        android:id="@+id/mLeaderAvatarView"
		        android:layout_width="46dip"
		        android:layout_height="46dip"
		        android:background="@drawable/me_normal"
		        android:layout_gravity="center_vertical"/>
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="4dip"
			    android:orientation="vertical" 
			    android:layout_gravity="center_vertical">
			    <RelativeLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
				    <TextView
				        android:id="@+id/mTimeTv"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textSize="@dimen/textsize_small"
				        android:textColor="#b6babc"
				        android:text="time"
				        android:layout_alignParentRight="true"
				        android:layout_centerVertical="true"/>
				    <TextView
				        android:id="@+id/mNameTv"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:singleLine="true"
				        android:textSize="@dimen/textsize_small"
				        android:textColor="#b6babc"
				        android:text="name"
				        android:layout_toLeftOf="@id/mTimeTv"
				        android:layout_centerVertical="true"/>
			    </RelativeLayout>
			    <RelativeLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="8dip">
				    <Button
				        android:id="@+id/mAcceptBtn"
				        android:layout_width="80dip"
				        android:layout_height="30dip"
				        android:textSize="@dimen/textsize_small"
				        android:textColor="#ffffff"
				        android:text="@string/accept"
				        android:layout_alignParentRight="true"
				        android:background="@drawable/bg_btn_red"
				        android:layout_centerVertical="true"/>
				    <TextView
				        android:id="@+id/mInfoTv"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="4dip"
				        android:singleLine="true"
				        android:textSize="@dimen/textsize_normal"
				        android:textColor="#000000"
				        android:text="infomation..."
				        android:layout_toLeftOf="@id/mAcceptBtn"
				        android:layout_centerVertical="true"/>
			    </RelativeLayout>
			</LinearLayout>
		
		</LinearLayout>
</LinearLayout>