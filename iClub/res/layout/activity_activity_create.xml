<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ebebeb">
    <include layout="@layout/activity_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dip"
		    android:layout_marginRight="10dip"
		    android:orientation="vertical">
		    <TextView
		        android:id="@+id/mClubNameTv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#696969"
		        android:text="Club Name"
		        android:textSize="@dimen/textsize_smaller"
		        android:layout_marginTop="10dip"
		        android:layout_marginLeft="10dip"/>
		    <TextView
		        android:id="@+id/mThemeTv"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="10dip"
		        android:textColor="#000000"
		        android:text="theme"
		        android:textSize="@dimen/textsize_normal"
		        android:layout_marginTop="4dip"
		        android:background="@drawable/bg_corner_white"/>
		    <EditText
		        android:id="@+id/mDescEt"
		        android:layout_width="match_parent"
		        android:layout_height="100dip"
		        android:paddingTop="6dip"
		        android:paddingBottom="6dip"
		        android:paddingLeft="4dip"
		        android:paddingRight="4dip"
		        android:textColor="#000000"
		        android:hint="@string/hint_activity_desc"
		        android:textSize="@dimen/textsize_normal"
		        android:layout_marginTop="2dip"
		        android:background="@drawable/bg_corner_white"
		        android:gravity="top"/>
		    
		    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="80dip"
			    android:layout_marginTop="10dip"
			    android:padding="6dip"
			    android:orientation="horizontal"
			    android:background="@drawable/bg_start_end_time"
			    android:gravity="center_vertical">
				<RelativeLayout
				    android:id="@+id/mStartDateTimeConatiner" 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:layout_marginLeft="4dip"
				    android:layout_marginRight="4dip"
				    android:padding="6dip"
				    android:orientation="vertical"
				    android:gravity="center_vertical">
				    <ImageView
				        android:id="@+id/mDateIconView"
				        android:layout_width="24dip"
				        android:layout_height="24dip"
				        android:layout_alignParentLeft="true"
				        android:background="@drawable/icon_start_time"/>
				    <TextView
				         android:id="@+id/mStartDateTv"
				         android:layout_toRightOf="@id/mDateIconView"
				         android:layout_alignTop="@id/mDateIconView"
				         android:layout_marginLeft="4dip"
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:textColor="@android:color/black"
					     android:textSize="@dimen/textsize_normal"
					     android:text="startDate"
					     android:gravity="top"/>
				    <TextView
				         android:id="@+id/mStartTimeTv"
				         android:layout_below="@id/mStartDateTv"
				         android:layout_alignLeft="@id/mStartDateTv"
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:textColor="@android:color/black"
					     android:textSize="@dimen/textsize_smaller"
					     android:text="startTime"/>
				</RelativeLayout>
				<LinearLayout
				    android:id="@+id/mEndDateTimeConatiner"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:padding="6dip"
				    android:orientation="vertical"
				    android:gravity="center_vertical|right">
				    <TextView
				         android:id="@+id/mEndDateTv"
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:textColor="@android:color/black"
					     android:textSize="@dimen/textsize_normal"
					     android:text="end date"/>
				    <TextView
				         android:id="@+id/mEndTimeTv"
					     android:layout_width="wrap_content"
					     android:layout_height="wrap_content"
					     android:textSize="@dimen/textsize_smaller"
					     android:textColor="@android:color/black"
					     android:text="end time"/>
				</LinearLayout>
			</LinearLayout>
			
		    <RelativeLayout
		        android:id="@+id/mLocationContainer" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:padding="10dip"
			    android:layout_marginTop="10dip"
			    android:background="@drawable/bg_corner_white">
			    <ImageView
			        android:id="@+id/mLocationView"
			        android:layout_width="24dip"
			        android:layout_height="24dip"
			        android:layout_alignParentRight="true"
			        android:background="@drawable/icon_start_time"
			        android:layout_centerVertical="true"/>
			    <EditText
			        android:id="@+id/mLocationEt"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_toLeftOf="@id/mLocationView"
			        android:hint="@string/hint_position"
			        android:background="@null"
			        android:layout_centerVertical="true"/>"
			</RelativeLayout>
		</LinearLayout>
    </ScrollView>
</LinearLayout>