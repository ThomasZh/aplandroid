<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mTitleContainer"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/activity_title_bg" >

        <Button
            android:id="@+id/leftBtn"
            android:layout_width="@dimen/activity_title_left_btn_width"
            android:layout_height="@dimen/activity_title_left_btn_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_title_left_btn_margin_left"
            android:background="#ffff00"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/rightBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_title_right_btn_margin_right"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/mTitleView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/rightBtn"
            android:layout_toRightOf="@id/leftBtn"
            android:gravity="center"
            android:singleLine="true"
            android:text="查询结果"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_corner_white"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_accoutdetai_headimg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_seconed_height"
        android:layout_margin="5dp"
        android:background="@drawable/bg_corner_white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_accountdetail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="成才"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_mail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_seconed_height"
        android:layout_margin="5dp"
        android:background="@drawable/bg_corner_white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_accountdetail_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="chengcai"
            android:textColor="@color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_addcontact_req"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_red"
        android:text="邀请"
        android:textColor="@android:color/white" />

    <LinearLayout
        
        android:id="@+id/tv_result_show"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_seconed_height"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_corner_white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/no_result_showu"
            android:textSize="10sp"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>